// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// @db.Date = '1958-02-07' instead '1958-02-07T11:22:49.727Z'
model Member {
  // Basic fields
  id          String   @id @default(uuid())
  birthday    DateTime @db.Date()
  email       String?  @db.VarChar(255)
  phoneNumber String
  fullName    String   @db.VarChar(255)
  sex         Sex

  // Gym-related fields
  status          Status    @default(enquiry)
  belt            BeltRank  @default(white)
  stripe          Int       @default(0)
  joinedDate      DateTime  @db.Date()
  contractEndDate DateTime? @db.Date()
  medicalIssues   String?
  homeAddress     String
  signedWaiver    Boolean   @default(false)
  notes           String?

  Attendance Attendance[]

  @@unique([fullName, birthday, phoneNumber])
}

model Class {
  id          String  @id @default(uuid())
  name        String
  instructor  String?
  description String?

  session Session[]

  @@unique([name])
}

model Session {
  id          String   @id @default(uuid())
  oneTime     Boolean  @default(false)
  dayOfWeek   Int
  startTime   DateTime @db.Time()
  endTime     DateTime @db.Time()
  description String?

  // Only for one time event or period
  startDate DateTime? @db.Date()
  endDate   DateTime? @db.Date()

  class      Class        @relation(fields: [classId], references: [id])
  classId    String
  Attendance Attendance[]

  @@unique([classId, startDate, startTime])
}

model Attendance {
  id          String   @id @default(uuid())
  sessionDate DateTime @db.Date()

  attendee   Member  @relation(fields: [attendeeId], references: [id])
  attendeeId String
  session    Session @relation(fields: [sessionId], references: [id])
  sessionId  String

  @@unique([attendeeId, sessionId, sessionDate])
}

enum Sex {
  female
  male
}

enum Status {
  enquiry
  trial
  member
}

enum BeltRank {
  white
  blue
  purple
  brown
  black
}
